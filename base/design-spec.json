{
  "meta": {
    "type": "ui-theme-spec",
    "version": "1.0.0",
    "intent": "Visual design tokens and layout guidance derived from reference design",
    "notes": "No copy or image-specific content included"
  },

  "theme": {
    "tone": [
      "high-contrast",
      "athletic",
      "premium",
      "focused",
      "editorial"
    ],
    "personality": [
      "bold",
      "confident",
      "gritty",
      "minimal"
    ]
  },

  "color": {
    "palette": {
      "primary": {
        "black": "#0B0B0D",
        "charcoal": "#111216",
        "white": "#FFFFFF"
      },
      "accent": {
        "red": "#E10600",
        "red-dark": "#C80000"
      },
      "neutral": {
        "light-gray": "#F2F2F2",
        "mid-gray": "#A0A0A0",
        "dark-gray": "#8A8A8A"
      }
    },
    "usage": {
      "background-dark": ["black", "charcoal"],
      "background-light": ["light-gray", "white"],
      "text-on-dark": ["white"],
      "text-on-light": ["black", "dark-gray"],
      "emphasis": ["red"],
      "cta": ["red"]
    },
    "rules": [
      "Accent color used only for emphasis or actions",
      "No decorative gradients",
      "High contrast required for all text"
    ]
  },

  "typography": {
    "fonts": {
      "primary": {
        "style": "condensed-sans-serif",
        "weight-range": [600, 900],
        "use": ["headlines", "hero-text", "section-titles"]
      },
      "secondary": {
        "style": "neutral-sans-serif",
        "weight-range": [400, 600],
        "use": ["body-text", "supporting-content", "navigation"]
      }
    },
    "scale": {
      "hero": {
        "transform": "uppercase",
        "letterSpacing": "tight",
        "lineHeight": "compact"
      },
      "sectionHeader": {
        "transform": "uppercase",
        "weight": 700
      },
      "body": {
        "weight": 400,
        "lineHeight": "comfortable"
      },
      "utility": {
        "transform": "uppercase",
        "letterSpacing": "wide",
        "size": "small"
      }
    }
  },

  "layout": {
    "container": {
      "maxWidth": "1200px",
      "padding": {
        "desktop": "2rem",
        "mobile": "1rem"
      }
    },
    "grid": {
      "type": "flex-and-grid-hybrid",
      "columns": {
        "desktop": 2,
        "mobile": 1
      },
      "gap": "consistent"
    },
    "spacing": {
      "sectionVertical": "large",
      "componentVertical": "medium",
      "inline": "tight"
    }
  },

  "components": {
    "header": {
      "background": "transparent-or-dark",
      "navigationStyle": "minimal",
      "cta": {
        "emphasis": true,
        "placement": "right-aligned"
      }
    },

    "hero": {
      "background": "dark",
      "textContrast": "high",
      "layout": "full-width",
      "headlineScale": "oversized",
      "distractions": "none"
    },

    "featureRow": {
      "background": "light",
      "layout": "horizontal",
      "iconStyle": "minimal",
      "alignment": "centered"
    },

    "contentSection": {
      "background": "light",
      "layout": "two-column",
      "textAlignment": "left",
      "accentElement": "vertical-color-bar"
    },

    "footer": {
      "background": "dark",
      "textSize": "small",
      "layout": "compact",
      "icons": "horizontal"
    }
  },

  "buttons": {
    "primary": {
      "background": "red",
      "text": "white",
      "borderRadius": "small",
      "weight": "bold"
    },
    "secondary": {
      "background": "transparent-or-white",
      "text": "red-or-black",
      "border": "optional"
    },
    "states": {
      "hover": "color-shift",
      "active": "opacity-or-scale",
      "focus": "visible-outline"
    }
  },

  "icons": {
    "style": "minimal-line",
    "fill": "single-color",
    "sizes": "consistent",
    "pairing": "icon-plus-label"
  },

  "imagery": {
    "treatment": [
      "high-contrast",
      "dramatic-lighting",
      "sharp-edges"
    ],
    "role": "energy-and-momentum",
    "placementRules": [
      "Hero images dominate",
      "Supporting images stay within grid"
    ]
  },

  "motion": {
    "enabled": true,
    "style": "subtle",
    "allowed": [
      "fade",
      "color-transition"
    ],
    "disallowed": [
      "bounce",
      "heavy-parallax",
      "looping-animation"
    ]
  },

  "accessibility": {
    "contrast": "wcag-aa-or-better",
    "textSizing": "responsive",
    "iconRedundancy": "icons-not-sole-indicator",
    "focusStates": "required"
  },

  "implementationNotes": {
    "recommendedApproach": [
      "css-variables",
      "tailwind-theme-extension",
      "component-driven-architecture"
    ],
    "javascriptUsage": "minimal",
    "responsiveStrategy": "desktop-first"
  }
}
